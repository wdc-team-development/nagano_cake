<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>ジャンル編集</h1>
      <br>
      <div class="form-horizontal" role="form">
        <%= form_for(@genre, url: admin_genre_path(@genre.id) do |f| %>
          <div class="form-group">
            <!--ジャンル名入力-->
            <%= f.label :name, "ジャンル"%>
            <%= f.text_field :name, autofocus: true %>
           <!--追加ボタン -->
            <%= f.submit "変更を保存する", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
